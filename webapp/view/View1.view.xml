<mvc:View
    controllerName="project4.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">

    <Page id="_IDGenPage" title="Employee Management Data">

        <content>

            <Toolbar id="_IDGenToolbar">
                <Button id="_IDGenButton" text="Add"
                        type="Emphasized"
                        press="onOpenDialog"/>

                <Button id="_IDGenButton1" text="Delete"
                        type="Reject"
                        press="onDelete"/>

                <ToolbarSpacer id="_IDGenToolbarSpacer"/>

                <SearchField id="_IDGenSearchField" width="300px"
                             liveChange="onSearch"
                             placeholder="Search by Employee ID or Name" />
            </Toolbar>

            <Table id="empTable"
                   items="{empModel>/Employees}"
                   mode="MultiSelect"
                   noDataText="No Employees Found">

                <columns>
                    <Column id="_IDGenColumn"><Text id="_IDGenText1" text="Employee ID"/></Column>
                    <Column id="_IDGenColumn1"><Text id="_IDGenText2" text="Name"/></Column>
                    <Column id="_IDGenColumn2"><Text id="_IDGenText3" text="Department"/></Column>
                    <!-- <Column id="_IDGenColumn3"><Text id="_IDGenText4" text="Designation"/></Column>
                    <Column id="_IDGenColumn4"><Text id="_IDGenText5" text="Gender"/></Column>
                    <Column id="_IDGenColumn5"><Text id="_IDGenText6" text="Location"/></Column>
                    <Column id="_IDGenColumn6"><Text id="_IDGenText7" text="Salary"/></Column>
                    <Column id="_IDGenColumn7"><Text id="_IDGenText8" text="Office"/></Column> -->
                </columns>

                <items>
                    <ColumnListItem id="_IDGenColumnListItem"
                        type="Navigation"
                        press="onRowPress">

                        <cells>
                            <Text id="_IDGenText9" text="{empModel>EmpId}"/>
                            <Text id="_IDGenText10" text="{empModel>Name}"/>
                            <Text id="_IDGenText11" text="{empModel>Department}"/>
                            <!-- <Text id="_IDGenText12" text="{empModel>Designation}"/>
                            <Text id="_IDGenText13" text="{empModel>Gender}"/>
                            <Text id="_IDGenText14" text="{empModel>Location}"/>
                            <Text id="_IDGenText15" text="{empModel>Salary}"/>
                            <Text id="_IDGenText16" text="{empModel>Office}"/> -->
                        </cells>

                    </ColumnListItem>
                </items>

            </Table>

        </content>
    </Page>

</mvc:View>
